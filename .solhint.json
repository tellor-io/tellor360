{
    "extends": "solhint:recommended",
    "rules": {
      "no-unused-vars": "error",
      "code-complexity": "warn",
      "contract-name-camelcase": "error",
      "not-rely-on-time": "off",
      "reason-string": [
        "warn",
        {
          "maxLength": 70
        }
      ],
      "compiler-version": [
        "error",
        "0.8.3"
      ],
      "func-visibility": [
        "warn",
        {
          "ignoreConstructors": true
        }
      ]
    }
  }